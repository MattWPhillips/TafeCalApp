<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mcal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mcal.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mcal.NewEvent"
            android:label="@string/title_activity_new_event" >
        </activity>
        <activity
            android:name="com.example.mcal.ViewEvent"
            android:label="@string/title_activity_view_event" >
        </activity>
        <activity
            android:name="com.example.mcal.EditEvent"
            android:label="@string/title_activity_edit_event" >
        </activity>
    </application>

</manifest>
